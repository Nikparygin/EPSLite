<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <bean id="postServiceImpl" class="ru.russianpost.epslite.dao.impl.SendLetterServiceImpl"/>

    <jaxws:endpoint id="SendLetterService" implementor="#postServiceImpl" address="/SendLetter">
        <jaxws:properties>
            <entry key="attachment-memory-threshold" value="50"/>
        </jaxws:properties>
    </jaxws:endpoint>
</beans>
